{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["dom", "es2017"],
    "target": "es6",
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "outDir": "lib",
    "rootDir": "src"
  },
  "include": ["./src/**/*"]
}
